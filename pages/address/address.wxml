<view class="addressContainer">
    <view class="form-box">
        <form bindsubmit="formSubmit">
            <input value="{{userName}}" placeholder="姓名" bindinput="bindName"/>
            <input type="number" value="{{userPhone}}" placeholder="电话号码" bindinput="bindPhone" />
            <input value="{{addressDetail}}" placeholder="详细地址" bindinput="bindDetail"/>
            <button form-type="submit">保存</button>
        </form>
    </view>
</view>
